@model DavieCleaningService_OfficeMaster.Models.LoginRegisterViewModel
@{
    ViewBag.Title = "Log in";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/Content/Login/css/normalize.css">


    <link rel="stylesheet" href="~/Content/Login/css/style.css">




</head>

<body>

    <div class="form">

        <ul class="tab-group">
            <li class="tab active"><a href="#login">Log In</a></li>
            <li class="tab"><a href="#signup">Sign Up</a></li>
            
        </ul>

        <div class="tab-content">
            <div id="login">
                <h1>Welcome Back!</h1>

                <!--<form action="" method="post">-->
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                        {
    @Html.AntiForgeryToken()
                    <div class="field-wrap">
                        <label>
                            Email Address<span class="req">*</span>
                        </label>
                        <input type="email" name="email" required autocomplete="off" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        <input type="password" name="password" required autocomplete="off" />
                    </div>

                    <p class="forgot"><a href="@Url.Action("ForgotPassword","Account")">Forgot Password?</a></p>

                    <button type="submit" class="button button-block">Log In</button>
}
                <!--</form>-->

            </div>

            <div id="signup">
                <h1>Sign Up for Free</h1>

                <!--<form action="" method="post">-->
@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                        {
    @Html.AntiForgeryToken()
                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                First Name<span class="req">*</span>
                            </label>
                            <input type="text" name="firstName" required autocomplete="off" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Last Name<span class="req">*</span>
                            </label>
                            <input type="text" name="lastName" required autocomplete="off" />
                        </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Email Address<span class="req">*</span>
                        </label>
                        <input type="email" name="email" required autocomplete="off" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Set A Password<span class="req">*</span>
                        </label>
                        <input type="password" name="password" required autocomplete="off" />
                    </div>
    
                    <div class="field-wrap">
                        <label>
                            Confirm Password<span class="req">*</span>
                        </label>
                        <input type="password" name="confirmPassword" required autocomplete="off" />
                    </div>

                    <button type="submit" class="button button-block">Get Started</button>
}
                <!--</form>-->

            </div>
        </div><!-- tab-content -->
        <div class="row pull-left">
            <div class="col-md-12 pull-left">
                <div id="backToHome" style="margin-top:35px;">
                    <p class="forgot pull-left"><a href="@Url.Action("Index","Home")">Davie Cleaning Service - Home</a></p>
                </div>
            </div>
        </div>

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="~/Scripts/Login/js/index.js"></script>




</body>
</html>